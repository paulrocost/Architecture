@model Sigga.Avaliacao.Model.Response.EntityCollectionResponse<Item>

@using Sigga.Avaliacao.Model.Entity;
@using Sigga.Avaliacao.Model.Response;
@{
    ViewBag.Title = "Index";
}


<div class="row">
    @Html.Partial("_Consulta", new EntityResponse<Item>(null))
</div>


<div class="row">
    <h4>Lista Itens</h4>
    <div style="height:300px; overflow-y:auto">
        <table class="table table-condensed">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>UserId</th>
                    <th>Title</th>
                    <th>Completed</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (var item in Model.Collection)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.UserId</td>
                            <td>@item.Title</td>
                            <td>@item.Completed</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>